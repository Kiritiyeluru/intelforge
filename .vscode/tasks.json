        {
            "label": "IntelForge: Version Info",
            "type": "shell",
            "command": "source venv/bin/activate && python scripts/cli.py version",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Show detailed version and component information"
        }
    ],
    "inputs": [
        {
            "id": "urlFile",
            "description": "Path to URL file",
            "default": "urls.txt",
            "type": "promptString"
        },
        {
            "id": "threshold",
            "description": "Semantic similarity threshold (0.6-0.9)",
            "default": "0.75",
            "type": "promptString"
        },
        {
            "id": "scanFile",
            "description": "File to scan for PII",
            "default": "content.txt",
            "type": "promptString"
        }
    ]
}
