            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "detail": "Generate content freshness and analytics report"
        },
        {
            "label": "IntelForge: PII Scan",
            "type": "shell",
            "command": "source venv/bin/activate && python scripts/cli.py pii-scan --file ${input:scanFile}",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
